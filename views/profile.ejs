<%- include('header', { title: 'User Info' }) %>

<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <!-- User Profile Card -->
        <div class="card shadow-lg rounded-3">
          <div class="card-body text-center">
            
            <!-- Profile Picture -->
            <div class="mb-3">
              <% if (user.profile_image) { %>
                <img src="<%= user.profile_image %>" 
                     alt="Profile Picture" 
                     class="rounded-circle" 
                     style="width: 120px; height: 120px; object-fit: cover;">
              <% } else { %>
                <img src="/img/default.png" 
                     alt="Default Profile Picture" 
                     class="rounded-circle" 
                     style="width: 120px; height: 120px; object-fit: cover;">
              <% } %>
            </div>

            <!-- User Name -->
            <h4 class="card-title mb-0">
              <%= user.firstName %> <%= user.lastName %>
            </h4>
            <p class="text-muted">@<%= user.username %></p>

            <!-- About / Bio -->
            <% if (user.bio) { %>
              <p class="card-text"><%= user.bio %></p>
            <% } else { %>
              <p class="text-muted">No bio provided.</p>
            <% } %>

            <!-- User Info List -->
            <ul class="list-group list-group-flush text-start mt-3">
              <li class="list-group-item">
                <strong>Email:</strong> <%= user.email %>
              </li>
              <li class="list-group-item">
                <strong>Joined:</strong> <%= user.createdAt %>
              </li>
              <li class="list-group-item">
                <strong>Role:</strong> <%= user.role || 'User' %>
              </li>
            </ul>

            <!-- Action Buttons -->
            <div class="mt-3">
              <a href="/user/profile/edit" class="btn btn-primary btn-sm">Edit Profile</a>
              <a href="/user/logout" class="btn btn-outline-danger btn-sm">Logout</a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
